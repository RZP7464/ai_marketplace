generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Merchant {
  id              Int              @id @default(autoincrement())
  name            String
  email           String           @unique
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  credentials     Credential[]
  apis            Api[]
  dynamicSettings DynamicSettings?
  users           User[]
  sessions        Session[]
  chats           Chat[]

  @@map("merchants")
}

model Credential {
  id         Int      @id @default(autoincrement())
  merchantId Int      @map("merchant_id")
  authType   String   @map("auth_type")
  header     String?
  username   String?
  password   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  apis       Api[]

  @@map("credentials")
}

model Api {
  id         Int      @id @default(autoincrement())
  merchantId Int      @map("merchant_id")
  authId     Int      @map("auth_id")
  apiType    String   @map("api_type")
  payload    Json
  config     Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  merchant   Merchant   @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  credential Credential @relation(fields: [authId], references: [id], onDelete: Cascade)

  @@map("apis")
}

model DynamicSettings {
  id         Int      @id @default(autoincrement())
  merchantId Int      @unique @map("merchant_id")
  color      String?
  icon       String?
  header     String?
  footer     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@map("dynamic_settings")
}

model StandardPayload {
  id        Int      @id @default(autoincrement())
  apiType   String   @map("api_type")
  config    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("standard_payloads")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  phoneNo    String?  @map("phone_no")
  merchantId Int      @map("merchant_id")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@map("users")
}

model Session {
  id         Int      @id @default(autoincrement())
  merchantId Int      @map("merchant_id")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  chats      Chat[]

  @@map("sessions")
}

model Chat {
  id         Int      @id @default(autoincrement())
  sessionId  Int      @map("session_id")
  merchantId Int      @map("merchant_id")
  message    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  session    Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@map("chats")
}
