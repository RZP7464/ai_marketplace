generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Merchant {
  name            String
  email           String           @unique
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  id              Int              @id @default(autoincrement())
  slug            String           @unique
  type            String           @default("general")
  
  // Merchant profile fields (signup page)
  displayName     String?          @map("display_name")
  logo            String?          // Logo URL
  description     String?          // Business description
  website         String?          // Merchant website URL
  phone           String?          // Contact phone
  address         String?          // Business address
  
  apis            Api[]
  chats           Chat[]
  credentials     Credential[]
  dynamicSettings DynamicSettings?
  sessions        Session[]
  users           User[]

  @@map("merchants")
}

model Credential {
  authType   String   @map("auth_type")
  header     String?
  username   String?
  password   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  id         Int      @id @default(autoincrement())
  merchantId Int      @map("merchant_id")
  apis       Api[]
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@map("credentials")
}

model Api {
  apiType    String     @map("api_type")
  payload    Json
  config     Json
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  id         Int        @id @default(autoincrement())
  merchantId Int        @map("merchant_id")
  authId     Int        @map("auth_id")
  credential Credential @relation(fields: [authId], references: [id], onDelete: Cascade)
  merchant   Merchant   @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@map("apis")
}

model DynamicSettings {
  color      String?
  icon       String?
  header     String?
  footer     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  id         Int      @id @default(autoincrement())
  merchantId Int      @unique @map("merchant_id")
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@map("dynamic_settings")
}

model StandardPayload {
  apiType   String   @map("api_type")
  config    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  id        Int      @id @default(autoincrement())

  @@map("standard_payloads")
}

model User {
  name       String
  email      String   @unique
  password   String
  phoneNo    String?  @map("phone_no")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  id         Int      @id @default(autoincrement())
  merchantId Int      @map("merchant_id")
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@map("users")
}

model Session {
  id         Int      @id @default(autoincrement())
  merchantId Int      @map("merchant_id")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  chats      Chat[]
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Chat {
  id         Int      @id @default(autoincrement())
  sessionId  Int      @map("session_id")
  merchantId Int      @map("merchant_id")
  message    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  session    Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("chats")
}
